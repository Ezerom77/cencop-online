<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head') %>
    </head>
    
    <body>
    <%- include('./partials/header') %>
        <main class="main">
            <h3 class="title"><%= title %></h3>
            
            <% for(i=0;i<products.length;i++) { %>
                <div class="carousel">
                    <div class="carousel__track-container">
                        <ul class="carousel__track">
                            <li class="carousel__slide">
                                <a href="/products/detail/<%=products[i].id%>">
                                <img class="carousel__image" src="/images/products/<%=products[i].image%>" alt="">
                                <ul class="product-detail">
                                    <li><%=products[i].name%></li>
                                    <li>AR$ <%=products[i].price%></li>
                                    <li>Stock: <%=products[i].stock%></li>
                                    <li>Tiempo restante: 04:12:07</li>
                                </ul>
                                </a>
                                <a href="/users/carrito"><i class="far fa-thumbs-up"></i></a>
                                <i class="far fa-thumbs-down"></i>
                            </li>
                        </ul>
                    </div>
                </div>
            <% } %>

        </main>

        <%- include('./partials/footer') %>

    </body>
</html>

